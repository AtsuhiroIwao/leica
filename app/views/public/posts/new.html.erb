<div class="m-5">
  <% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>投稿フォーム</h2>
<%= form_with model: @post,url:public_posts_path do |f| %>
  <div class="text-center">
    <h4>写真</h4>
      <%= f.file_field :post_image, accept: "image/*" %>

    <h4 class="mt-5">本文</h4>
      <%= f.text_area :body,size: "60*50" %>
      <h4 class="mt-2">メーカー<h6>(Sony,Canon, etc.)</h6></h4>
      <%= f.text_field :makers %>
      <h4 class="mt-3">カメラブランド<h6>(a6600,EOS, etc.)</h6></h4>
      <%= f.text_field :brands %>

        <div class="d-flex align-items-center justify-content-center mt-3">
          <button class="btn btn-success btn-lg">投稿する</button>
        </div>
  </div>
<% end %>
</div>


