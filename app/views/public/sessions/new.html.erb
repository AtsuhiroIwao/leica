<div class="mt-3 ml-5">
<h2>ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class="table table-borderless">
  <div class="field mt-5">
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email",size:50 %></td>
    </tr>
  </div>

  <div class="field mt-3">
    <tr>
      <th><%= f.label :パスワード %></th>
      <td><%= f.password_field :password, autocomplete: "current-password",size:50 %></td>
    </tr>
  </div>
</table>

<div class="mt-3">
  <button class="btn btn-lg btn-primary" type="submit">ログイン</button>
</div>
<% end %>

<div class="text-center mt-5">
<h5>会員登録がお済みでない方</h5><br>
  <strong>こちらから
          <%= link_to new_user_registration_path do %>
          <button class="btn btn-md btn-success" type="submit">新規登録</button>
          <% end %>
  </strong>
</div>
