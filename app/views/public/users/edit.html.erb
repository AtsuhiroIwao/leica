<div class="m-5">
<h2 class="mb-5">プロフィール編集</h2>
<%= form_with model: @user, url:public_user_path, method: :patch do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",size: 25%>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <button class="btn btn-light">変更を保存</button>
<% end %>
</div>
